{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      { "name": "next" }
    ],
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/types/*": [
          "types/*"
      ],
      "@/utils/*": [
          "utils/*"
      ],
      "@/contexts/*": [
          "contexts/*"
      ],
      "@/hooks/*": [
          "hooks/*"
      ],
      "@/styles/*": [
          "styles/*"
      ],
      "@/store/*": [
          "store/*"
      ],
      "@/lib/*": [
          "lib/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "lib/env.ts",
    ".next/types/**/*.ts",
    "./dist/types/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
